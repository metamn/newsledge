<%= form_for(@import) do |f| %>
  <% if @import.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@import.errors.count, "error") %> prohibited this import from being saved:</h2>

      <ul>
      <% @import.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Account: <%= @account.name %> on <%= @account.platform.name %>
    <%= f.hidden_field :account_id, {:value => @account.id} %>
    <%= f.hidden_field :log, {:value => "Import started"} %>
    <%= f.hidden_field :status, {:value => "Pending"} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
